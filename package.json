{
    "name": "@matthewdowns/react-component-library-boilerplate",
    "version": "1.0.4",
    "description": "Optimized template repository for React component libraries.",
    "keywords": [
        "boilerplate",
        "component-library",
        "react",
        "react-component-library",
        "styleguide"
    ],
    "license": "MIT",
    "author": "Matthew Downs <matthew.downsc@gmail.com>",
    "homepage": "https://github.com/matthewdowns/react-component-library-boilerplate#readme",
    "bugs": {
        "url": "https://github.com/matthewdowns/react-component-library-boilerplate/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/matthewdowns/react-component-library-boilerplate.git"
    },
    "main": "dist/index.js",
    "files": [
        "./dist"
    ],
    "scripts": {
        "start": "npm run styleguide:serve",
        "lint": "ts-standard -p ./tsconfig.json",
        "prebuild": "rimraf ./dist",
        "build": "rollup -c ./rollup.config.js",
        "test": "jest",
        "styleguide:build": "styleguidist build",
        "styleguide:serve": "styleguidist server"
    },
    "dependencies": {
        "classnames": "^2.3.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@axe-core/react": "^4.4.3",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.3.0",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.1.2",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.1",
        "@types/react": "^18.0.14",
        "@types/react-dom": "^17.0.9",
        "babel-loader": "^8.2.5",
        "css-loader": "^6.4.0",
        "jest": "^27.4.3",
        "jest-transform-stub": "^2.0.0",
        "less": "^4.1.2",
        "less-loader": "^11.0.0",
        "node-polyfill-webpack-plugin": "^1.1.4",
        "postcss": "^8.3.9",
        "react-styleguidist": "^11.1.7",
        "rimraf": "^3.0.2",
        "rollup": "^2.77.3",
        "rollup-plugin-postcss": "^4.0.1",
        "rollup-plugin-terser": "^7.0.2",
        "style-loader": "^3.3.1",
        "ts-jest": "^27.0.7",
        "ts-loader": "^9.3.1",
        "ts-standard": "^11.0.0",
        "tsconfig-paths-webpack-plugin": "^3.5.1",
        "typescript": "^4.7.4"
    },
    "ts-standard": {
      "ignore": [
        "/dist",
        "/jest.setup.ts",
        "/node_modules",
        "/src/**/*.spec.tsx"
      ]
    },
    "private": true
}
