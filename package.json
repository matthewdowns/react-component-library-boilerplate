{
    "name": "@matthewdowns/react-component-library-boilerplate",
    "version": "1.0.3",
    "description": "Optimized template repository for React component libraries.",
    "main": "dist/index.js",
    "scripts": {
        "start": "npm run storybook:start",
        "build": "rimraf dist && rollup -c",
        "lint": "eslint .",
        "test": "jest",
        "storybook:start": "start-storybook -p 6006",
        "storybook:build": "build-storybook -o ./docs",
        "storybook:deploy": "storybook-to-ghpages -o ./docs",
        "prepublishOnly": "node ./scripts/prepublish.js",
        "prepack": "npm run lint && npm run test && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/matthewdowns/react-component-library-boilerplate.git"
    },
    "keywords": [
        "react",
        "typescript",
        "eslint",
        "jest",
        "rollup",
        "storybook"
    ],
    "author": "Matthew Downs <matthew.downsc@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/matthewdowns/react-component-library-boilerplate/issues"
    },
    "homepage": "https://github.com/matthewdowns/react-component-library-boilerplate#readme",
    "dependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^11.2.0",
        "@rollup/plugin-typescript": "^8.2.0",
        "@storybook/addon-actions": "^6.1.21",
        "@storybook/addon-controls": "^6.1.21",
        "@storybook/addon-essentials": "^6.1.21",
        "@storybook/addon-links": "^6.1.21",
        "@storybook/react": "^6.1.21",
        "@storybook/storybook-deployer": "^2.8.7",
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "@types/jest": "^26.0.21",
        "@types/node": "^14.14.35",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.2",
        "@typescript-eslint/eslint-plugin": "^4.18.0",
        "@typescript-eslint/parser": "^4.18.0",
        "babel-loader": "^8.2.2",
        "css-loader": "^1.0.1",
        "eslint": "^7.22.0",
        "eslint-plugin-react": "^7.22.0",
        "git-branch-is": "^4.0.0",
        "jest": "^26.6.3",
        "jest-transform-stub": "^2.0.0",
        "less": "^4.1.1",
        "less-loader": "^7.3.0",
        "postcss": "^8.2.8",
        "rimraf": "^3.0.2",
        "rollup": "^2.42.0",
        "rollup-plugin-postcss": "^4.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "style-loader": "^0.23.1",
        "ts-jest": "^26.5.4",
        "ts-loader": "^8.0.18",
        "typescript": "^4.2.3"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://npm.pkg.github.com"
    }
}
